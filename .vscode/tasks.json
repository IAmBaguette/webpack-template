{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "default",
            "isBuildCommand": true,
            "showOutput": "always",
            "args": [
                "run",
                "dev"
            ]
        },
        {
            "taskName": "install",
            "args": [
                "install"
            ]
        },
        {
            "taskName": "update",
            "args": [
                "update"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ]
        }
    ]
}